{
  "compilerOptions": {
    "strict": true /* enable all strict type-checking options */,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "lib": ["es6"],
    "sourceMap": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "noUnusedLocals": false,
    "typeRoots": ["src/types"]
  },
  "include": ["src"],
  "exclude": ["test", "node_modules", ".vscode-test"]
}
